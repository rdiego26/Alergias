<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/detailItemList">

    <TextView 
        android:text="@string/place_holder_nome_categoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />    

    <Spinner 
        android:id="@+id/detalhes_alergia_sp_categoria"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:prompt="@string/place_holder_nome_categoria"
		style="@style/spinner"
        />    

    <EditText 
        	android:id="@+id/detalhes_alergia_txtNomeAlergia"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="text"
        android:hint="@string/place_holder_alergia"
        />

    <EditText 
        	android:id="@+id/detalhes_alergia_txtObsAlergia"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="text"
            android:hint="@string/place_holder_obs"
        />

    <Button 
        android:id="@+id/detalhes_alergia_btnAtualizar"
		style="@style/botao"
        android:text="@string/lbl_btn_atualizar"
        android:onClick="update"
        />    
    
</LinearLayout>