<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/simpleBody">

    <TextView 
        android:text="@string/lbl_nome_categoria"
        style="@style/textFont"
        />    

    <Spinner 
        android:id="@+id/detalhes_alergia_sp_categoria"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:prompt="@string/place_holder_nome_categoria"
		style="@style/spinner"
        />    

    <EditText 
        	android:id="@+id/detalhes_alergia_txtNomeAlergia"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="text"
            android:hint="@string/place_holder_alergia"
            style="@style/inputStyle"
        />

    <EditText 
        	android:id="@+id/detalhes_alergia_txtObsAlergia"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="text"
            android:hint="@string/place_holder_obs"
            style="@style/inputStyle"
        />

    <Button 
        android:id="@+id/detalhes_alergia_btnAtualizar"
		style="@style/botao"
        android:text="@string/lbl_btn_atualizar"
        android:onClick="update"
        />    
    
</LinearLayout>