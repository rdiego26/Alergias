<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="textFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
    </style>
    
	<style name="inputStyle" parent="@style/textFont">
        <item name="android:textSize">18sp</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:inputType">textCapWords</item>
    </style>
    
	<style name="textPresentation" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
    </style>

	<style name="dicas" parent="@style/textFont">
        <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#006400</item>
    </style>	    
    
	<style name="botao">
        <!--
        <item name="android:layout_width">fill_parent</item>
        -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">#566D7E</item>
	    <item name="android:background">@drawable/custom_button</item>
	</style>

	<style name="basico">
	    <item name="android:textColor">#B0C4DE</item>
		<item name="android:background">@drawable/wall</item>
	</style>
	
	<style name="cabecalho">
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
	</style>

	<style name="corpo">
	    <item name="android:layout_below">@id/cabecalho</item>
	    <item name="android:layout_above">@id/rodape</item>
	    <item name="android:textColor">#708090</item>
	</style>

	<style name="rodape">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentBottom">true</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@android:color/transparent</item>
	</style>
	
	<style name="spinner" parent="@android:style/Theme">
	    <item name="android:textColor">#ADD8E6</item>
	</style>
	
	<style name="TitleText">
        <item name="android:textSize">21sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#D3D3D3</item>
    </style>
    
	<style name="DashBoardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@null</item>
    </style>	
	
				    
</resources>