<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="textFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
    </style>
    
	<style name="inputStyle" parent="@textFont">
        <item name="android:textSize">18sp</item>
	    <item name="android:textColor">#ff85c1ff</item>
        <item name="android:textColorHint">#ffb6b5b8</item>
	    <item name="android:inputType">textCapWords</item>
    </style>
    
	<style name="textPresentation" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
    </style>

	<style name="botao">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">#fff8ffff</item>
	    <item name="android:background">@drawable/button_with_shadow</item>
	</style>

	<style name="cabecalho">
	    <item name="android:textColor">#fff8ffff</item>
	    <item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
	</style>

	<style name="corpo">
	    <item name="android:layout_below">@id/cabecalho</item>
	    <item name="android:layout_above">@id/rodape</item>
	    <item name="android:textColor">#708090</item>
	</style>

	<style name="rodape">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentBottom">true</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@android:color/transparent</item>
	</style>
	
	<style name="spinner" parent="@android:style/Theme">
	    <item name="android:textColor">#ADD8E6</item>
	</style>
	
	<style name="TitleText">
        <item name="android:textSize">21sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#D3D3D3</item>
    </style>
    
	<style name="dashBoardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@null</item>
    </style>	
	

    <style name="defaultBackground">
        <item name="android:background">#ff4b8cc5</item>
    </style>

    <style name="simpleBody">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">#ff4b8cc5</item>
    </style>

    <style name="containerListItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/list_custom_border</item>
    </style>

    <style name="detailItemList" parent="defaultBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>